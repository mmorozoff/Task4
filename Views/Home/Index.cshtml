@model IEnumerable<Task4.Models.User>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-right">
    <a asp-action="Logout" asp-controller="Account"><img width="40" height="40" src="https://cdn.icon-icons.com/icons2/514/PNG/512/logout_icon-icons.com_51025.png" /></a>
</div>

<div class="text-center">
    <h1 class="display-4"><b>Users</b></h1>
</div>



<form method="post" asp-action="Action" asp-controller="Account">
    <script type="text/javascript">
        function check(field) {
            for (i = 0; i < field.length; i++)
                if (field[i].checked == true)
                    field[i].checked = false;
                else
                    field[i].checked = true;
        }
    </script>
    <div class="text-left">
        <div>
            <button name="block"><img width="30" height="30" src="https://cdn.icon-icons.com/icons2/2104/PNG/512/padlock_icon_129399.png" /></button>
            <button name="unblock"><img width="30" height="30" src="https://cdn.icon-icons.com/icons2/2104/PNG/512/unlock_icon_129431.png" /></button>
            <button name="delete"><img width="30" height="30" src="https://cdn.icon-icons.com/icons2/1808/PNG/512/trash-can_115312.png" /></button>
        </div>
    </div>
    <table class="table"
        <thead>
            <tr>
                <th>
                    <input id="global_checkbox" type="checkbox" onclick="check(this.form.AreChecked)">
                </th>
                <th><b>ID</b></th>
                <th><b>Name</b></th>
                <th><b>Email</b></th>
                <th><b>RegistrationTime</b></th>
                <th><b>LoginTime</b></th>
                <th><b>State</b></th>
            </tr>
        </thead>
        <tbody>
            
            @foreach (var item in Model)
            {
                <tr>
                    <td><input class="check-box" type="checkbox" name="AreChecked" value="@item.Email" /></td>
                    <td>@item.ID</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.RegistrationTime</td>
                    <td>@item.LoginTime</td>
                    <td>@item.State</td>
                </tr>
            }
            
        </tbody>
    </table>
</form>